<div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :name, input_html: { class: 'form-control' }, label: 'Tournament name')) %>
</div><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :date, html5: true, input_html: { class: 'form-control' })) %>
</div><% if Flipper.enabled? :single_sided_swiss
 %><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :swiss_format, collection: Tournament.swiss_formats.keys, input_html: { class: 'form-control' }, include_blank: false, label_method: ->(val) { val.capitalize.tr('_', '-') })) %>
</div><% end %><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :stream_url, input_html: { class: 'form-control' }, label: 'Stream URL')) %>
</div><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :self_registration, as: :boolean, inline_label: 'Self-Registration: Allow players to use a link to register themselves')) %>
</div><% if Flipper.enabled? :nrdb_deck_registration
 %><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :nrdb_deck_registration, as: :boolean, inline_label: 'Deck registration: Upload decks from NetrunnerDB')) %>
</div><% end %><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :private, as: :boolean, inline_label: 'Private: Only I will be able to view this tournament')) %>
</div><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :manual_seed, as: :boolean, inline_label: 'Use manual seeding for tiebreakers: Players can be assigned a "seed" value that will be used before all other tiebreakers (in ascending order; i.e. Seed 1 wins all ties)')) %>
</div><% if Flipper.enabled? :streaming_opt_out
 %><div class="form-group">
<%= ::Temple::Utils.escape_html((f.input :allow_streaming_opt_out, as: :boolean, inline_label: 'Streaming opt out: Allow players to choose whether their games should be included in video coverage (defaults to yes, and players are notified that in a top cut it may not be possible to exclude them)')) %>
</div><% end %>
